#include <QtCore/QCoreApplication>
#include <QtCore/QDir>

inline bool isRunningInstalled()
{
    static bool installed = (QCoreApplication::applicationDirPath() == "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@");
    return installed;
}

inline QString appDirectory()
{
    qDebug() << "isRunningInstalled" << isRunningInstalled();
    if (isRunningInstalled()) {
        return QString("@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/%1/qml/").arg(qApp->applicationName());
    } else {
        return QString("@CMAKE_CURRENT_SOURCE_DIR@/qml/");
    }
}
